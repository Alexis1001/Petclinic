<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMascotaActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:background="@drawable/cileo"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            app:srcCompat="@drawable/mascotasadd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Dueño"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/Dueno"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="xxxx" />
        </LinearLayout>

        <EditText
            android:id="@+id/ActualizarNombreMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="nombre de la mascota"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nacimiento"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/FechaDeNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/fecha"
            android:ems="10"
            android:hint=" año-mes-dia"
            android:inputType="date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/SpinnerMascotasTipo"
                android:layout_width="246dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/ButtonMascotas"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="mascota" />
        </LinearLayout>

        <Button
            android:id="@+id/AgregarMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5DADE2  "
            android:text="agregar mascota" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>